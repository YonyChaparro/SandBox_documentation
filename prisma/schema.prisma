// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

generator jsonSchema { 
  provider = "prisma-json-schema-generator"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Paciente {
  cedula            Int      @id
  nombre            String
  apellido          String
  fechaDeNAcimiento DateTime
  telefono          String
  Cita              Cita[]
}

model Medico {
  tajetaProfecional    Int    @id
  nombre               String
  apellido             String
  consultorio          String
  correo               String
  StringinEspecialidad Int
  Cita                 Cita[]

  Especialidad               Especialidad? @relation(fields: [IdEspecialidad], references: [idEspecialidad])
  IdEspecialidad Int?
}

model Cita {
  idCita                  Int       @id
  fecha                   DateTime
  cedulaPaciente          Int
  terjetaProfecional      Int
  Paciente                Paciente? @relation(fields: [pacienteCedula], references: [cedula])
  pacienteCedula          Int?
  Medico                  Medico?   @relation(fields: [medicoTajetaProfecional], references: [tajetaProfecional])
  medicoTajetaProfecional Int?
}

model Especialidad {
  idEspecialidad Int      @id
  nombre         String
  Medico         Medico[]
}

